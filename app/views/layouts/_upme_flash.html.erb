<%- if flash %>
  <div class="container">
    <% flash.each do |type, message| %>
      <div class="row" onclick="$(this).fadeOut();">
        <div class="col s12 m2"></div>
        <div class="col s12 m8">
          <div class="upme-alert-<%= type %>">
            <% if type == 'success' %>
              <i class="up-check-sign upme-icon-<%= type %>"></i>
            <% end %>
            <% if type == 'danger' or type == 'alert' %>
              <i class="up-close upme-icon-<%= type %>"></i>
            <% end %>
            <span class="upme-alert-text"><%= message %></span>
          </div>
        </div>
        <div class="col s12 m2"></div>
      </div>
    <% end %>
  </div>
<%- end %>