%h2.label Professor
%ul.collection{style: 'border: none'}
- @project.project_users.each do |pu|
  - if pu.user.professor?
    = link_to profile_path(pu.user.id) do
      .profile
        = image_tag profilepic(pu.user), class: 'circle', width: '30px', id: 'img-profilepic'
        .profile-name= pu.user.first_name= pu.user.first_name

- if @project.client
  %h2.label Cliente
  = link_to profile_path(@project.client.id) do
    .profile
      = image_tag profilepic(@project.client), class: 'profile-image', width: '30px', id: 'img-profilepic'
      .profile-name= @project.client.full_name

